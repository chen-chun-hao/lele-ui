@import 'nib'
@import './transition.styl'
flex(justify = normal, direction = row)
  display flex
  flex-direction direction
  justify-content justify

size(width, height)
  width width
  height height

square(size)
  width size
  height size

margin-center()
  margin-left auto
  margin-right auto

lines(lines = 1)
  overflow hidden
  text-overflow ellipsis
  if lines == 1
    white-space nowrap
  else
    display box
    display -webkit-box
    -webkit-line-clamp lines
    -webkit-box-orient vertical

.pointer
  cursor pointer