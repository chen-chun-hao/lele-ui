// 基础样式设置
$font-size-base = 14px
$color-white = #FFFFFF
$modifier-separator = '--'
$border-width-base = 1px
$border-style-base = solid
$border-base = $border-width-base $border-style-base $border-color-base
$border-color-base = #DCDFE6
$border-radius-base = 4px
// 字体
$font-weight-primary = 500
/* 颜色设置
-------------------------- */
$color-primary = #409EFF
// 定义纯黑纯白
$color-white = #FFFFFF
$color-black = #000000
// 定义主色的10种亮暗状态,没全用但是可以保留
$color-primary-light-1 = lighten($color-primary, 10%) /* 53a8ff */
$color-primary-light-2 = lighten($color-primary, 20%) /* 66b1ff */
$color-primary-light-3 = lighten($color-primary, 30%) /* 79bbff */
$color-primary-light-4 = lighten($color-primary, 40%) /* 8cc5ff */
$color-primary-light-5 = lighten($color-primary, 50%) /* a0cfff */
$color-primary-light-6 = lighten($color-primary, 60%) /* b3d8ff */
$color-primary-light-7 = lighten($color-primary, 70%) /* c6e2ff */
$color-primary-light-8 = lighten($color-primary, 80%) /* d9ecff */
$color-primary-light-9 = lighten($color-primary, 90%) /* ecf5ff */
// 定义成功 警告 危险 信息状态的颜色
$color-success = #67C23A
$color-warning = #E6A23C
$color-danger = #F56C6C
$color-info = #909399
// 定义成功 警告 危险 信息状态的亮度颜色
$color-success-light = lighten($color-success, 80%)
$color-warning-light = lighten($color-warning, 80%)
$color-danger-light = lighten($color-danger, 80%)
$color-info-light = lighten($color-info, 80%)
$color-success-lighter = lighten($color-success, 90%)
$color-warning-lighter = lighten($color-warning, 90%)
$color-danger-lighter = lighten($color-danger, 90%)
$color-info-lighter = lighten($color-info, 90%)
// 字体颜色
$color-text-primary = #303133
$color-text-regular = #606266
$color-text-secondary = #909399
$color-text-placeholder = #C0C4CC
// 边框颜色
$border-color-base = #DCDFE6
$border-color-light = #E4E7ED
$border-color-lighter = #EBEEF5
$border-color-extra-light = #F2F6FC
// 背景颜色
$background-color-base = #F5F7FA
// =========按钮大小
